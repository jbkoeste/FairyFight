<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <!-- in game screen -->
    <!-- +++++++++++++++++++++++++++++++++++++++ -->
    <screen id="ingame" controller="mygame.controllers.InGameScreenStateController">
        <layer id="layer" backgroundColor="#0000" childLayout="center">
            <panel id="panel_all" childLayout="vertical">
                <panel id="panel_top" height="25%" width="*" align="center" valign="center" backgroundColor="#0000" childLayout="horizontal" visibleToMouse="false">
                    <panel width="*" />
                    <panel width="50%" height="*" childLayout="center">
                        <text id="player1status" font="Interface/Fonts/Default.fnt" color="#FFFF" text="Player 1" align="center" valign="center" />
                    </panel>
                    <panel width="*" />
                </panel>
                <panel height="50%" />
                <panel id="panel_bottom" height="25%" width="*" align="center" valign="center" backgroundColor="#0000" childLayout="horizontal" visibleToMouse="false">
                    <panel width="*" />
                    <panel height="*" width="50%" childLayout="center">
                        <text id="player2status" font="Interface/Fonts/Default.fnt" color="#FFFF" text="Player 2" align="center" valign="center" />
                    </panel>
                    <panel width="*" />
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>

<?xml version="1.0" encoding="UTF-8"?>
<nifty-styles xmlns="http://nifty-gui.lessvoid.com/nifty-gui">

    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button background panel -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <style id="custom-button#panel">
        <attributes align="center" valign="center" childLayout="center" visibleToMouse="true" width="100%" height="100%" />
        <effect>
            <onHover name="border" color="#000F" border="5" post="true"/>
        </effect>
    </style>

    <!-- +++++++++++++++++++++++++++++++++++++ -->
    <!-- style for the button text -->
    <!-- +++++++++++++++++++++++++++++++++++++ -->
        <style id="custom-button#text">
        <attributes font="Interface/Fonts/BlockedIn40.fnt" align="center" valign="center" textHAlign="center" textVAlign="center" visibleToMouse="false" width="100%" height="80px" />
    </style>
</nifty-styles>